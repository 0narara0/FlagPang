<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2ba71"
    tools:context=".SelectFlag"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/flagProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/flagProgress"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/flagScore"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flagScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/flagScore"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/flagProgress"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flagSelectCountry"
        android:layout_width="365dp"
        android:layout_height="68dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="11dp"
        android:background="#00aa0000"
        android:gravity="center"
        android:text="@string/flagCountry"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/flagImage1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flagScore" />

    <ImageView
        android:id="@+id/flagImage1"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:background="#dcaf76"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/flagImage3"
        app:layout_constraintEnd_toStartOf="@+id/flagImage2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flagSelectCountry"
        app:srcCompat="@drawable/canada" />

    <ImageView
        android:id="@+id/flagImage4"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:background="#dcaf76"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/flagImage3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/flagImage3"
        app:layout_constraintTop_toTopOf="@+id/flagImage3"
        app:srcCompat="@drawable/canada" />

    <ImageView
        android:id="@+id/flagImage3"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"
        android:background="#dcaf76"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/flagMain"
        app:layout_constraintEnd_toStartOf="@+id/flagImage4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flagImage1"
        app:srcCompat="@drawable/canada" />

    <ImageView
        android:id="@+id/flagImage2"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:background="#dcaf76"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/flagImage1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/flagImage1"
        app:layout_constraintTop_toTopOf="@+id/flagImage1"
        app:srcCompat="@drawable/canada" />

    <Button
        android:id="@+id/flagMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:text="@string/flagMain"
        android:textColor="#ffffff"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/flagReset"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/flagReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:keepScreenOn="false"
        android:text="@string/flagReset"
        android:textColor="#ffffff"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/flagMain" />

</android.support.constraint.ConstraintLayout>